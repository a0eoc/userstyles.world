#!/usr/bin/env sh

log() { printf "%s\n" "$@"; }
invalid() { printf "Invalid option: %s\n" "$*"; }
check_air() {
    if ! command -v air >/dev/null; then
        log "Missing 'air'! Install it with 'go get -u github.com/cosmtrek/air'"
        exit
    fi
}

check_dir() {
    pwd="$(pwd)"
    pwd="${pwd/*\/}"
    if [ $pwd = "tools" ]; then
        cd ..
    fi
}

prod() {
    log "prod"
    check_dir
    env PORT=":${2:-3001}" \
        DB="${3:-prod.db}" \
        ./userstyles.world
}

drop() {
    log "drop"
    check_air
    env DB_DROP="1" \
        DB_DEBUG="${2:-silent}" \
        air
}

dev() {
    log "dev"
    check_air
    check_dir
    env DB_DEBUG="${2:-silent}" \
        DB_DROP="${3:-false}" \
        air
}

case "$1" in
    prod) prod "$@" ;;
    drop) drop "$@" ;;
    dev)  dev  "$@" ;;
    *) invalid "$@" ;;
esac
