<div class="Box mt:m" id="id-{{ .Review.ID }}">
	<div class="Box-header"> <!--flex-->
		<a class="username" href="/user/{{ .Review.User.Username }}"><b>{{ .Review.User.Username }}</b></a>
		{{ if gt .Review.User.Role 0 }}
			{{ template "icons/verified" }}
		{{ end }}
		reviewed {{ with .Review.Rating }} and rated {{ . }}/5 ‚≠ê {{ end }}
		<time datetime="{{ .Review.CreatedAt | iso }}">
			{{ .Review.CreatedAt | rel }}
		</time>
		{{ if ne .Review.CreatedAt .Review.UpdatedAt }}
			<time datetime="{{ .Review.UpdatedAt | iso }}">
				(edited {{ .Review.UpdatedAt | rel }})
			</time>
		{{ end }}
		{{ if eq .Review.UserID $.User.ID }}
			<!--<div>-->
				<a class="ml:a" href="{{ .Review.Permalink }}/delete">
					Delete
				</a>
				{{ if (eq .Review.UserID $.User.ID) }}
					<a href="{{ .Review.Permalink }}/edit">
						Edit
					</a>
				{{ end }}
			<!--</div>-->
		{{ end }}
	</div>

	{{ with .Review.Comment }}
		<div class="Box-body mt:m">{{ . }}</div>
	{{ end }}
</div>
